{
  "version": "0.2.0",
  "configurations": [
    {
      // F5 while any .py file is active
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      // F5 on this entry to run json2markdown.py input.json output_dir/
      "name": "Python: json2markdown",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/utils/json2markdown.py",
      "args": [
        "${workspaceFolder}/utils/database_sozluk/v12/processed_gts.json",   // <json-file>
        "${workspaceFolder}/_terms"             // [output-dir]
      ],
      "console": "integratedTerminal"
    },
    {
      // F5 on this entry to run tdk_word_processor.py
      "name": "Python: tdk_word_processor",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/utils/tdk_word_processor.py",
      "args": [
        "${workspaceFolder}/utils/database_sozluk/v12/gts.json",
        "${workspaceFolder}/utils/database_sozluk/v12/processed_gts.json" 
      ],
      "console": "integratedTerminal"
    }
  ]
}